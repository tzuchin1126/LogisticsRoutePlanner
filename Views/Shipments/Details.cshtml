        function checkOptimizationStatus(response) {
            // æª¢æŸ¥å›æ‡‰æ˜¯å¦æœ‰æ•ˆ
            if (!response) {
                return {
                    isOptimized: false,
                    message: "æœªæ”¶åˆ°å„ªåŒ–å›æ‡‰",
                    success: false,
                    error: "å›æ‡‰ç‰©ä»¶ç‚ºç©º"
                };
            }

            // æª¢æŸ¥æˆåŠŸæ¨™èªŒ (å¦‚æœå­˜åœ¨)
            if (response.success === false) {
                return {
                    isOptimized: false,
                    message: response.message || "å„ªåŒ–å¤±æ•—",
                    success: false,
                    error: response.message || "æœªçŸ¥éŒ¯èª¤"
                };
            }

            // æª¢æŸ¥å„ªåŒ–ç›®çš„åœ°åˆ—è¡¨æ˜¯å¦å­˜åœ¨
            // è™•ç†å…©ç¨®å¯èƒ½çš„æ ¼å¼ï¼š
            // 1. optimizedDestinations æ˜¯ç›´æ¥çš„é™£åˆ—
            // 2. optimizedDestinations æ˜¯åŒ…å« $values çš„ç‰©ä»¶
            let destinations = null;
            
            if (Array.isArray(response.optimizedDestinations)) {
                destinations = response.optimizedDestinations;
            } else if (response.optimizedDestinations && 
                    response.optimizedDestinations.$values && 
                    Array.isArray(response.optimizedDestinations.$values)) {
                destinations = response.optimizedDestinations.$values;
            }
            
            if (!destinations || destinations.length === 0) {
                return {
                    isOptimized: false,
                    message: "å„ªåŒ–å›æ‡‰æ ¼å¼ä¸æ­£ç¢º",
                    success: false,
                    error: "éŸ¿æ‡‰ç¼ºå°‘ optimizedDestinations æ•¸çµ„",
                    rawResponse: JSON.stringify(response)
                };
            }

            // æˆåŠŸç‹€æ…‹ - è¿”å›å„ªåŒ–å¾Œçš„ç›®çš„åœ°åˆ—è¡¨
            return {
                isOptimized: true,
                message: response.message || "é€è²¨é †åºå·²å„ªåŒ–",
                success: true,
                destinations: destinations,
                optimizationDate: new Date().toISOString().split('T')[0]
            };
        }

