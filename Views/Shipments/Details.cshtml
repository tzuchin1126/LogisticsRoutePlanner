        @* * Ê™¢Êü•Ë∑ØÁ∑öÊòØÂê¶Â∑≤Á∂ìÂÑ™Âåñ *@
        @* * @param {Object} response - APIÂõûÊáâÁâ©‰ª∂ *@
        @* * @returns {Object} - ÂåÖÂê´ÂÑ™ÂåñÁãÄÊÖãÂèäÁõ∏ÈóúË≥áË®äÁöÑÁâ©‰ª∂ *@

        function checkOptimizationStatus(response) {
            // Ê™¢Êü•ÂõûÊáâÊòØÂê¶ÊúâÊïà
            if (!response) {
                return {
                    isOptimized: false,
                    message: "Êú™Êî∂Âà∞ÂÑ™ÂåñÂõûÊáâ",
                    success: false,
                    error: "ÂõûÊáâÁâ©‰ª∂ÁÇ∫Á©∫"
                };
            }

            // Ê™¢Êü•ÊàêÂäüÊ®ôË™å (Â¶ÇÊûúÂ≠òÂú®)
            if (response.success === false) {
                return {
                    isOptimized: false,
                    message: response.message || "ÂÑ™ÂåñÂ§±Êïó",
                    success: false,
                    error: response.message || "Êú™Áü•ÈåØË™§"
                };
            }

            // Ê™¢Êü•ÂÑ™ÂåñÁõÆÁöÑÂú∞ÂàóË°®ÊòØÂê¶Â≠òÂú®
            // ËôïÁêÜÂÖ©Á®ÆÂèØËÉΩÁöÑÊ†ºÂºèÔºö
            // 1. optimizedDestinations ÊòØÁõ¥Êé•ÁöÑÈô£Âàó
            // 2. optimizedDestinations ÊòØÂåÖÂê´ $values ÁöÑÁâ©‰ª∂
            let destinations = null;
            
            if (Array.isArray(response.optimizedDestinations)) {
                destinations = response.optimizedDestinations;
            } else if (response.optimizedDestinations && 
                    response.optimizedDestinations.$values && 
                    Array.isArray(response.optimizedDestinations.$values)) {
                destinations = response.optimizedDestinations.$values;
            }
            
            if (!destinations || destinations.length === 0) {
                return {
                    isOptimized: false,
                    message: "ÂÑ™ÂåñÂõûÊáâÊ†ºÂºè‰∏çÊ≠£Á¢∫",
                    success: false,
                    error: "ÈüøÊáâÁº∫Â∞ë optimizedDestinations Êï∏ÁµÑ",
                    rawResponse: JSON.stringify(response)
                };
            }

            // ÊàêÂäüÁãÄÊÖã - ËøîÂõûÂÑ™ÂåñÂæåÁöÑÁõÆÁöÑÂú∞ÂàóË°®
            return {
                isOptimized: true,
                message: response.message || "ÈÄÅË≤®È†ÜÂ∫èÂ∑≤ÂÑ™Âåñ",
                success: true,
                destinations: destinations,
                optimizationDate: new Date().toISOString().split('T')[0]
            };
        }

