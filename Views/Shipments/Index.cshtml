                                                    <i class="fas fa-info-circle me-1"></i> 明細
                                                </a>
                                                <button class="btn btn-sm btn-danger ml-2" onclick="deleteShipment(@item.Id)">
                                                    <i class="fas fa-trash-alt mr-1"></i> 刪除
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-center">
                    <nav aria-label="配送任務分頁">
                        <ul class="pagination pagination-sm">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="上一頁">&laquo;</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="下一頁">&raquo;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="text-center small text-muted mt-2">
                    共 @Model.Count() 筆任務
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary border-0">
            <i class="fas fa-info-circle me-2"></i> 查無任務資料，請調整查詢條件後重試。
