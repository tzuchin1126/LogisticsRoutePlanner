@model IEnumerable<LogisticsRoutePlanner.Models.Shipment>

<div class="container-fluid py-3">
    <div class="row align-items-center mb-3">
        <div class="col">
            <h4 class="text-dark fw-bold m-0">配送任務列表</h4>
        </div>
        <div class="col-auto">
            <a class="btn btn-sm btn-success" asp-action="Create">
                <i class="fas fa-plus-circle me-1"></i> 新增任務
            </a>

        </div>
    </div>

    <form id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>

    <div id="loading-indicator" class="text-center d-none">
        <div class="spinner-border spinner-border-sm text-primary" role="status">
            <span class="visually-hidden">載入中...</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="text-nowrap" style="width: 25%">任務名稱</th>
                                        <th style="width: 35%">出貨地點</th>
                                        <th class="text-center" style="width: 20%">建立時間</th>
                                        <th class="text-center" style="width: 20%">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">@item.ShipmentName</td>
                                            <td class="align-middle">@item.OriginAddress</td>
                                            <td class="align-middle text-center">
                                                @* <span class="badge badge-light">
                                                    @item.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                                </span> *@
                                                <span class="badge" style="background-color: #f8f9fa; color: #333;">
                                                    @item.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fas fa-info-circle me-1"></i> 明細
                                                </a>
                                                <button class="btn btn-sm btn-danger ml-2" onclick="deleteShipment(@item.Id)">
                                                    <i class="fas fa-trash-alt mr-1"></i> 刪除
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-center">
                    <nav aria-label="配送任務分頁">
                        <ul class="pagination pagination-sm">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="上一頁">&laquo;</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="下一頁">&raquo;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="text-center small text-muted mt-2">
                    共 @Model.Count() 筆任務
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary border-0">
            <i class="fas fa-info-circle me-2"></i> 查無任務資料，請調整查詢條件後重試。
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function deleteShipment(id) {
            Swal.fire({
                title: '確定要刪除嗎？',
                text: "刪除後將無法復原！",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '是的，刪除！',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                    fetch(`/Shipments/Delete/${id}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        }
                    })
                    .then(response => {
                        if (response.ok) {
                            Swal.fire('刪除成功', '該任務已被刪除', 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('錯誤', '刪除失敗', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
