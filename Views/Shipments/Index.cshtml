@model IEnumerable<LogisticsRoutePlanner.Models.Shipment>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-dark"><i class="fas fa-truck-loading mr-2"></i>配送任務列表</h2>
            <p class="text-muted">管理您的所有配送任務和路線規劃，並高效地進行配送管理</p>
        </div>
        <div class="col-md-4 text-right">
            <a class="btn btn-primary btn-lg shadow-sm" asp-action="Create">
                <i class="fas fa-plus-circle mr-2"></i>新增任務
            </a>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-tasks mr-2"></i>當前任務</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 25%">
                                <i class="fas fa-tag mr-2"></i>任務名稱
                            </th>
                            <th style="width: 35%">
                                <i class="fas fa-map-marker-alt mr-2"></i>出貨地點
                            </th>
                            <th style="width: 20%">
                                <i class="far fa-clock mr-2"></i>建立時間
                            </th>
                            <th style="width: 20%" class="text-center">
                                <i class="fas fa-cog mr-2"></i>操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle font-weight-bold text-primary">@item.ShipmentName</td>
                                <td class="align-middle">@item.OriginAddress</td>
                                <td class="align-middle">
                                    <span class="badge badge-light">
                                        @item.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                    </span>
                                </td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fas fa-info-circle mr-1"></i>明細
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger ml-2"
                                            onclick="deleteShipment(@item.Id)">
                                        <i class="fas fa-trash-alt mr-1"></i>刪除
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted small">共 @Model.Count() 筆任務</span>
                </div>

                <div class="col-md-6 text-right">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">上一頁</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">下一頁</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    
    <form id="anti-forgery-form">
    @Html.AntiForgeryToken()
    </form>
</div>


@section Styles {
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .table-hover tbody tr:hover {
            background-color: #e3e6ea;
            transform: translateY(-2px);
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

        .card {
            border-radius: 1rem;
            overflow: hidden;
        }

        .btn-outline-info, .btn-outline-danger {
            border-width: 1.5px;
            padding: 8px 15px;
        }

        .btn-outline-info {
            color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .badge-light {
            background-color: #f8f9fa;
            color: #555;
            font-weight: 500;
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }

        .pagination .page-link {
            color: #007bff;
        }

        .pagination .page-link:hover {
            background-color: #e2e6ea;
        }
    </style>
}


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function deleteShipment(id) {
            Swal.fire({
                title: '確定要刪除嗎？',
                text: "刪除後將無法復原！",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '是的，刪除！',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                    fetch(`/Shipments/Delete/${id}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        }
                    })
                    .then(response => {
                        if (response.ok) {
                            Swal.fire('刪除成功', '該任務已被刪除', 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('錯誤', '刪除失敗', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
