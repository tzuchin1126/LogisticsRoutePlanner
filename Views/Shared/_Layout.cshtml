    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LogisticsRoutePlanner.styles.css" asp-append-version="true" />
    
    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.min.js"></script>
    
    <!-- Apple-style icon customization -->
    <style>
        /* SF Pro Display font (similar to Apple's system font) */
        @@font-face {
            font-family: 'SF Pro Display';
            src: url('https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-regular-webfont.woff');
        }
        
        /* Apple-style icon styling */
        .apple-icon {
            color: #3a393a;
            font-size: 1.1rem;
            width: 24px;
            height: 24px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 8px;
            transition: all 0.2s ease;
        }
        
        .apple-icon-lg {
            font-size: 1.5rem;
            width: 40px;
            height: 40px;
        }
        
        .apple-icon-thin {
            font-weight: 300;
        }
        
        /* Apple-style button with icon */
        .apple-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 8px 16px;
            border-radius: 980px;
            font-size: 0.95rem;
            font-weight: 500;
            background-color: rgba(0, 0, 0, 0.04);
            color: #3a393a;
            transition: all 0.3s ease;
            border: none;
        }
        
        .apple-btn:hover {
            background-color: rgba(0, 0, 0, 0.08);
        }
        
        .apple-btn-primary {
            background-color: #0066cc;
            color: white;
        }
        
        .apple-btn-primary:hover {
            background-color: #004499;
            color: white;
        }
        
        /* SweetAlert2 Apple style customization */
        .swal2-popup {
            border-radius: 16px;
            padding: 2em;
            font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
        }
        
        .swal2-title {
            color: #3a393a;
            font-weight: 600;
            letter-spacing: -0.02em;
        }
        
        .swal2-content {
            color: #5e5d5d;
        }
        
        .swal2-styled.swal2-confirm {
            background-color: #0066cc;
            border-radius: 980px;
            font-weight: 500;
            letter-spacing: -0.01em;
        }
        
        .swal2-styled.swal2-cancel {
            background-color: rgba(0, 0, 0, 0.04);
            color: #3a393a;
            border-radius: 980px;
            font-weight: 500;
            letter-spacing: -0.01em;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
