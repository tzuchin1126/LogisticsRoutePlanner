@model List<Shipment>

@{
    ViewData["Title"] = "配送報表查詢";
    var queryMonth = Context.Request.Query["month"].ToString();
    var month = string.IsNullOrEmpty(queryMonth) 
        ? DateTime.Now.ToString("yyyy-MM") 
        : queryMonth;
}

<div class="container-fluid py-3">
    <!-- 頁面標題與功能區 -->
    <div class="row align-items-center mb-3">
        <div class="col">
            <h4 class="text-dark fw-bold m-0">@ViewData["Title"]</h4>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("ExportExcel", "Reports", new { month = month })" 
               class="btn btn-sm btn-outline-primary export-excel">
                <i class="fas fa-file-excel me-1"></i> 匯出 Excel
            </a>
        </div>
    </div>

    <!-- 查詢區塊 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 bg-light">
                <div class="card-body py-3">
                    <form method="get" class="row g-2 align-items-end">
                        <!-- 選擇月份 -->
                        <div class="col-md-3 col-sm-6">
                            <label for="month" class="form-label small text-muted mb-1">選擇月份</label>
                            <input type="month" class="form-control form-control-sm" name="month" id="month" 
                                value="@ViewData["Month"]" />
                        </div>

                        <!-- 配送狀態 -->
                        <div class="col-md-3 col-sm-6">
                            <label for="status" class="form-label small text-muted mb-1">配送狀態</label>
                                <select name="status" id="status" class="form-select form-select-sm">
                                    <option value="" selected="@(string.IsNullOrEmpty(Context.Request.Query["status"]) ? "selected" : null)">全部</option>
                                    <option value="Delivered" selected="@(Context.Request.Query["status"] == "Delivered" ? "selected" : null)">已送達</option>
                                    <option value="Pending" selected="@(Context.Request.Query["status"] == "Pending" ? "selected" : null)">待送達</option>
                                    <option value="Skipped" selected="@(Context.Request.Query["status"] == "Skipped" ? "selected" : null)">已跳過</option>
                                </select>
                        </div>

                        <!-- 查詢按鈕 -->
                        <div class="col-md-2 col-sm-6">
                            <button type="submit" class="btn btn-sm btn-primary w-100">
                                <i class="fas fa-search me-1"></i> 查詢
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Anti-Forgery Token -->
    <form id="anti-forgery-form" method="post">
        @Html.AntiForgeryToken()
    </form>

    <!-- 資料載入指示器 -->
    <div id="loading-indicator" class="text-center d-none">
        <div class="spinner-border spinner-border-sm text-primary" role="status">
            <span class="visually-hidden">載入中...</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- 資料顯示區 -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        @foreach (var shipment in Model)
                        {
                            <div class="border-bottom mb-2">
                                <div class="bg-light p-2 d-flex align-items-center">
                                    <span class="text-primary fw-bold">
                                        <i class="far fa-calendar-alt me-1"></i>
                                        出貨日期：@shipment.ShipmentDate.ToString("yyyy-MM-dd")
                                    </span>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered mb-0">
                                        <thead>
                                            <tr class="bg-light">
                                                <th class="text-nowrap" style="width: 15%">客戶名稱</th>
                                                <th style="width: 40%">地址</th>
                                                <th class="text-center" style="width: 15%">狀態</th>
                                                <th style="width: 25%">跳過原因</th>
                                                <th class="text-center" style="width: 5%">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var dest in shipment.Destinations)
                                            {
                                                <tr data-id="@dest.Id" class="align-middle">
                                                    <td class="fw-medium">@dest.CustomerName</td>
                                                    <td class="small">@dest.Address</td>
                                                    <td class="text-center">
                                                        @{
                                                            string statusText = "";
                                                            string statusClass = "";

                                                            switch (dest.Status.ToString())
                                                            {
                                                                case "Delivered":
                                                                    statusText = "已送達";
                                                                    statusClass = "text-success";
                                                                    break;
                                                                case "Skipped":
                                                                    statusText = "已跳過";
                                                                    statusClass = "text-warning";
                                                                    break;
                                                                case "Pending":
                                                                    statusText = "待送達";
                                                                    statusClass = "text-secondary";
                                                                    break;
                                                                default:
                                                                    statusText = "未知";
                                                                    statusClass = "text-muted";
                                                                    break;
                                                            }
                                                        }
                                                        <span class="@statusClass fw-medium">@statusText</span>
                                                    </td>
                                                    <td class="small text-muted">@dest.SkipReason</td>
                                                    <td class="text-center">
                                                        <button class="btn btn-sm btn-link text-danger p-0 delete-destination" 
                                                           data-id="@dest.Id" title="刪除">刪除
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- 分頁 -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-center">
                    @if (ViewData["TotalPages"] != null && ViewData["CurrentPage"] != null)
                    {
                        var totalPages = (int)ViewData["TotalPages"];
                        var currentPage = (int)ViewData["CurrentPage"];

                        <nav aria-label="配送報表分頁">
                            <ul class="pagination pagination-sm">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?month=@month&page=@(currentPage - 1)" 
                                    aria-label="上一頁">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>

                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="?month=@month&page=@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="?month=@month&page=@(currentPage + 1)" 
                                    aria-label="下一頁">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
                <div class="text-center small text-muted mt-2">
                    共 @ViewData["TotalRecords"] 筆記錄 | 第 @ViewData["CurrentPage"] 頁，共 @ViewData["TotalPages"] 頁
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-secondary border-0">
                    <i class="fas fa-info-circle me-2"></i> 查無配送資料，請調整查詢條件後重試。
                </div>
            </div>
        </div>
    }
</div>

<!-- SweetAlert2 + 互動功能 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // 頁面載入時設定預設月份
    document.addEventListener('DOMContentLoaded', function() {
        // 如果沒有設定月份，預設為當月
        const monthInput = document.getElementById('month');
        if (!monthInput.value) {
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            monthInput.value = `${year}-${month}`;
        }
    });

    // 匯出Excel功能
    document.querySelector('.export-excel')?.addEventListener('click', function(e) {
        e.preventDefault();
        
        const url = this.getAttribute('href');
        
        Swal.fire({
            title: '匯出確認',
            text: '確定要匯出Excel檔案嗎？',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: '確定',
            cancelButtonText: '取消',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            customClass: {
                popup: 'swal-small'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // 實際執行下載
                window.location.href = url;
            }
        });
    });

    // 刪除功能
    document.querySelectorAll('.delete-destination').forEach(button => {
        button.addEventListener('click', async () => {
            const id = button.dataset.id;
            const row = button.closest('tr');

            const result = await Swal.fire({
                title: '刪除確認',
                text: "確定要刪除此筆配送資料嗎？",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: '確定刪除',
                cancelButtonText: '取消',
                customClass: {
                    popup: 'swal-small'
                }
            });

            if (result.isConfirmed) {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                try {
                    const response = await fetch(`/Reports/DeleteDestination/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': token
                        }
                    });

                    if (response.ok) {
                        // 直接移除行
                        row.remove();
                        
                        // 檢查表格是否還有資料
                        const tbody = row.closest('tbody');
                        if (tbody && tbody.children.length === 0) {
                            const tableContainer = tbody.closest('.border-bottom');
                            if (tableContainer) {
                                tableContainer.remove();
                            }
                            
                            // 如果所有表格都被移除，顯示無資料提示
                            const cardBody = document.querySelector('.card-body');
                            if (cardBody && cardBody.querySelectorAll('.border-bottom').length === 0) {
                                const card = cardBody.closest('.card');
                                card.insertAdjacentHTML('afterend', `
                                    <div class="alert alert-secondary border-0">
                                        <i class="fas fa-info-circle me-2"></i> 查無配送資料，請調整查詢條件後重試。
                                    </div>
                                `);
                                card.remove();
                            }
                        }
                        
                        // 顯示成功訊息（小型通知）
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'success',
                            title: '刪除成功',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else {
                        throw new Error('刪除失敗');
                    }
                } catch (error) {
                    Swal.fire({
                        title: '操作失敗',
                        text: '刪除過程發生錯誤，請稍後再試。',
                        icon: 'error',
                        confirmButtonColor: '#3085d6'
                    });
                }
            }
        });
    });
    
    // 查詢表單提交時顯示載入動畫
    document.querySelector('form')?.addEventListener('submit', function() {
        document.getElementById('loading-indicator')?.classList.remove('d-none');
    });

    // 為 SweetAlert 添加自訂樣式
    document.head.insertAdjacentHTML('beforeend', `
        <style>
            .swal-small {
                width: 320px !important;
                font-size: 0.95em;
            }
            .swal2-title {
                font-size: 1.3em !important;
            }
            .swal2-html-container {
                font-size: 0.95em !important;
            }
        </style>
    `);
</script>